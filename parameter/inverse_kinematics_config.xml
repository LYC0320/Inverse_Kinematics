<config>
    <!--The time step to play the motion caputre file-->
    <time_step>0.01</time_step>
    <!--footskate_clean_time_step>0.1</footskate_clean_time_step-->
    <frame_increment>1</frame_increment>
    <!--keyFrameInterval>50</keyFrameInterval-->
    <bone_radius>0.025</bone_radius>
    <axis_scale>0.3</axis_scale>
    <drift_up>17.0</drift_up>
    <result_picture_path>../result_picture/</result_picture_path>
    <ik>
        <linear_system_solver>PseudoinverseSolver</linear_system_solver>
        <!--linear_system_solver>DampedLeastSquaresSolver</linear_system_solver-->
        <damping_constant>0.1</damping_constant>
        <step>1.0</step>
        <error>0.001</error>
        <max_iteration_num>2000</max_iteration_num>
        <start_bone_idx>11</start_bone_idx>
        <end_bone_idx>28</end_bone_idx>
        <marker_radius>0.2</marker_radius> 
        <marker_color r="0.392" g="0.392" b="0.898" a="1.0"/>
        <target x="-0.268716" y="1.09069" z="-0.727368"/>
        <!--target x="-1.0" y="1.49" z="-1.5"/-->
        <plane_rotation_degree>45.0</plane_rotation_degree>
        <!--desired_trajectory_radius>0.30</desired_trajectory_radius-->
        <desired_trajectory_radius>0.30</desired_trajectory_radius>
        <desired_trajectory_degree_step>1.0</desired_trajectory_degree_step>
        <desired_trajectory_color r="0.902" g="0.510" b="0.902" a="0.8"/>
        <desired_trajectory_line_width>1.5</desired_trajectory_line_width>
        <max_end_effector_trajectory_size>90</max_end_effector_trajectory_size>
        <end_effector_trajectory_color r="1.0" g="0.0" b="1.0" a="1.0"/>
        <end_effector_trajectory_line_width>5.0</end_effector_trajectory_line_width>
    </ik>
</config>
